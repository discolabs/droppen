<form id="editor" method="POST">

    <nav id="navbar">
        <a id="brand" href="/" class="column-left">
            <img id="logo" src="{{ 'logo.svg' | asset_url }}" alt="DropPen" />
        </a>

        <section id="toolbar" class="column-content">
            <button type="submit">Run</button>
            <button type="button">Share</button>
            <input type="hidden" id="code" name="code" value="" />
        </section>

        <aside id="promos" class="column-content">
        </aside>
    </nav>

    <section id="content">
        <aside id="sidebar" class="column-left">
            <label for="template">Template</label>
            <select id="template" name="template" class="form-control">
                <option value="index">Index / Page</option>
                <option value="product">Product</option>
                <option value="collection">Collection</option>
            </select>

            <label for="product">Product</label>
            <select id="product" name="product" class="form-control">
                {% for product in collections.all.products %}
                <option value="{{ product.handle }}">{{ product.title }}</option>
                {% endfor %}
            </select>
        </aside>

        <section class="column-content">
            <div class="panel">
                <label for="liquid">Liquid</label>
                <textarea id="liquid" name="liquid"></textarea>
            </div>
            <div class="panel">
                <label for="js">Javascript</label>
                <textarea id="js" name="js"></textarea>
            </div>
        </section>

        <section class="column-content">
            <div class="panel">
                <label for="css">CSS</label>
                <textarea id="css" name="css"></textarea>
            </div>
            <div class="panel">
                <label for="preview">Preview</label>
                <iframe id="preview"></iframe>
            </div>
        </section>
    </section>

</form>
